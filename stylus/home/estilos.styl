.aside
	display none

.blog__container
	margin 4em 0
	font-size $basefont
		
.header__banner
	max-width 100% 
	height auto

.header__info
	font-size .9em
	font-weight bold

/* Contenedor principal alineado al centro de la p√°gina */
.main__container
	background-color $white	
	margin 0 auto
	box-shadow 0px 0px 30px 0px rgba(50, 50, 50, 0.75)
	
.post
	margin-bottom 1em
	
	img
		max-width 100% 
		height auto
		
.post__item__title
	font-family $altfont
	font-size 2em
	color $linkcolor
	margin-bottom .5em
	line-height .6
	a
		&:hover
			text-decoration none
			
.post__item
	margin-bottom 1em
	
	img
		max-width 100% 
		height 400px

.header__info
	margin-bottom 1.8em
	color pink
	border-bottom 2px solid pink
	
.widget__item
	margin-bottom 1rem

.widget__title
	font-size 2.5em
	color $baseheadingfontcolor
	margin-bottom .4em
	border-bottom 2px solid pink
	
.textwidget
	font-size 1.5em
	font-family $altfont

.footer
	a
		color $youtube
		
		&:hover
			color darken($youtube, 10)
	
.not__found__title
	color darken($linkcolor, 10)
	font-size 3em
	
.page__title
	font-size 2em
	margin-bottom .5em